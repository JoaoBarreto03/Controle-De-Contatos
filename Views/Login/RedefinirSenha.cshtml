@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Redefinir Senha";
}


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
    <form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
        <div class="mb-3">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Seu login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>    

        <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
        <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Login" role="button">Voltar</a>
    </form> 
